  email = srose@mbta.com
  name = Sky Rose
[push]
  default = current
  autoSetupRemote = true
[core]
  editor = nvim
  excludesfile = ~/git/config_files/gitignore_global
[merge]
  conflictstyle = diff3
[rerere]
  enabled = 1
[rebase]
  autostash = true
[pull]
  rebase = false
[init]
  defaultBranch = main
[fetch]
  prune = true
[diff]
  colorMoved = default
[branch]
  sort = -committerdate
