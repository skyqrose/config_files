[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  lgrelease = log --pretty=format:'%h %s' --abbrev-commit
  b = branch
  s = status
  st = stash
  d = diff
  aa = add -A
  cm = commit
  co = checkout
  r = rebase -i
  hide = update-index --assume-unchanged
  unhide = update-index --no-assume-unchanged
  hidden = !git ls-files -v | grep "^[[:lower:]]"
[user]
	email = srose@mbta.com
	name = Sky Rose
[push]
  default = current
[core]
  editor = vim
  excludesfile = ~sky/txt/config_files/gitignore_global
[merge]
  conflictstyle = diff3
[rerere]
  enabled = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[rebase]
  autostash = true
