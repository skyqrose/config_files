# Settings for my personal comuter

PATH=/data/config_files/scripts/:$PATH

#Get rid of sudo for some commands
alias shutdown='sudo shutdown now'
alias reboot='sudo reboot'
alias slep='sudo systemctl suspend'

alias show=sxiv #sxiv is a lot of letters to remember...

alias pingg='while :; do if ping -c 1 www.google.com; then break; else sleep 2; fi; done' #Wait until connection is established.

alias screenshot="scrot -e 'mv \$f /data/Dropbox/Pictures/screenshots/'"

alias wificycle="systemctl restart connman.service && connmanctl disable wifi && connmanctl enable wifi"

export EDITOR="vim"
export BROWSER="chromium"
